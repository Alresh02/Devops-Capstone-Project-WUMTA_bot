pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "reshars/uptime-monitor"
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-creds')
        TELEGRAM_BOT_TOKEN = credentials('TELEGRAM_BOT_TOKEN')
        TELEGRAM_CHAT_ID = credentials('TELEGRAM_CHAT_ID')
        APP_SERVER = "13.234.76.54" //Replace with your EC2 Public IP
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo 'Checking out code...'
                git branch: 'feature/jenkins', url: 'https://github.com/Alresh02/Devops-Capstone-Project-WUMTA_bot.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'Building Docker image...'
                sh 'docker build -t $DOCKER_IMAGE:latest ./app'
            }
        }

        stage('Push to Docker Hub') {
            steps {
                echo 'Pushing image to Docker Hub...'
                sh '''
                echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin
                docker push $DOCKER_IMAGE:latest
                '''
            }
        }

        stage('Deploy to EC2') {
            steps {
                echo 'ðŸš€ Deploying to EC2 instance...'
                sshagent (credentials: ['uptime-ec2-key']) {
                    sh '''
                    scp -o StrictHostKeyChecking=no deploy.sh ubuntu@$APP_SERVER:/home/ubuntu/
                    ssh -o StrictHostKeyChecking=no ubuntu@$APP_SERVER "chmod +x deploy.sh && ./deploy.sh"
                    '''
                }
            }
        }
    }

    post {
        success {
            echo 'Deployment successful!'
            sh '''
            curl -s -X POST https://api.telegram.org/bot$TELEGRAM_BOT_TOKEN/sendMessage \
            -d chat_id=$TELEGRAM_CHAT_ID \
            -d text="Website Uptime Monitor successfully deployed!"
            '''
        }
        failure {
            echo 'Deployment failed!'
            sh '''
            curl -s -X POST https://api.telegram.org/bot$TELEGRAM_BOT_TOKEN/sendMessage \
            -d chat_id=$TELEGRAM_CHAT_ID \
            -d text="Deployment failed for Website Uptime Monitor!"
            '''
        }
    }
}
